<h1><%= item.name %></h1>

<div class="item-detail">
  <% if (item.image) { %>
    <img src="<%= item.image %>" alt="<%= item.name %>" class="item-image">
  <% } %>

  <p><strong>Description:</strong> <%= item.description %></p>

  <p><strong>Category:</strong> <%= item.category %></p>

  <a href="/items" class="btn">Back to Collection</a>
</div>

